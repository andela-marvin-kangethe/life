<h1>Listing lifelesses</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lifelesses.each do |lifeless| %>
      <tr>
        <td><%= link_to 'Show', lifeless %></td>
        <td><%= link_to 'Edit', edit_lifeless_path(lifeless) %></td>
        <td><%= link_to 'Destroy', lifeless, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

